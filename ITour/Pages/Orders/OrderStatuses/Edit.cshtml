@page
@model ITour.Pages.Orders.OrderStatuses.EditModel

@{
    ViewData["Title"] = "Изменить статус заказа";
}

<h3>Изменить статус заказа</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderStatus.Id" />
            <input type="hidden" asp-for="OrderStatus.TenantId" />
            <input type="hidden" asp-for="OrderStatus.IsDeleted" />
            <input type="hidden" asp-for="OrderStatus.IsSystem" />
            <div class="form-group">
                <label asp-for="OrderStatus.Name" class="control-label"></label>
                <input asp-for="OrderStatus.Name" class="form-control" />
                <span asp-validation-for="OrderStatus.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderStatus.Sequence" class="control-label"></label>
                <input asp-for="OrderStatus.Sequence" class="form-control" />
                <span asp-validation-for="OrderStatus.Sequence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
