@page
@inject ITour.Services.Tenants.ITenantProvider tenantProvider
@model ITour.Pages.Admin.Orders.OrderStatuses.IndexModel

@{
    ViewData["Title"] = "OrderStatuses";
}

<h2>OrderStatuses</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tenant
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.OrderStatus[0].TenantId)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.OrderStatus[0].IsDeleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderStatus[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderStatus[0].Sequence)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderStatus[0].IsSystem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderStatus)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => tenantProvider.GetTenantById(item.TenantId).Name)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.TenantId)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.IsDeleted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sequence)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsSystem)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
