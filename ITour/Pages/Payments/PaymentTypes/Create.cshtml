@page
@model ITour.Pages.Payments.PaymentTypes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>PaymentType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <div class="form-group">
                <label asp-for="PaymentType.Name" class="control-label"></label>
                <input asp-for="PaymentType.Name" class="form-control" />
                <span asp-validation-for="PaymentType.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="PaymentType.IsSystem" /> @Html.DisplayNameFor(model => model.PaymentType.IsSystem)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
