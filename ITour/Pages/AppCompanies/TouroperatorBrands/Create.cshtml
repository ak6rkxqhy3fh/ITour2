@page
@model ITour.Pages.AppCompanies.TouroperatorBrands.CreateModel

@{
    ViewData["Title"] = "Создать Бренд туроператора";
}

<h3>Создать Бренд туроператора</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TouroperatorBrand.Name" class="control-label"></label>
                <input asp-for="TouroperatorBrand.Name" class="form-control" />
                <span asp-validation-for="TouroperatorBrand.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
