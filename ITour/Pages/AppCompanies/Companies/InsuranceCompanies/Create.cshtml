@model ITour.Pages.AppCompanies.Companies.InsuranceCompanies.CreateModel

@{
    ViewData["Title"] = "Создать Страховую компанию";
}
<h3>Создать Страховую компанию</h3>
<hr />
<div class="row">
    <div class="col-md-10">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="InsuranceCompany.Name" class="control-label"></label>
                    <input asp-for="InsuranceCompany.Name" class="form-control" />
                    <span asp-validation-for="InsuranceCompany.Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-8">
                    <label asp-for="InsuranceCompany.FullName" class="control-label"></label>
                    <input asp-for="InsuranceCompany.FullName" class="form-control" />
                    <span asp-validation-for="InsuranceCompany.FullName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-2">
                    <label asp-for="InsuranceCompany.INN" class="control-label"></label>
                    <input asp-for="InsuranceCompany.INN" class="form-control" />
                    <span asp-validation-for="InsuranceCompany.INN" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="InsuranceCompany.OGRN" class="control-label"></label>
                    <input asp-for="InsuranceCompany.OGRN" class="form-control" />
                    <span asp-validation-for="InsuranceCompany.OGRN" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="InsuranceCompany.Phone" class="control-label"></label>
                    <input asp-for="InsuranceCompany.Phone" class="form-control maskedinput-phone" />
                    <span asp-validation-for="InsuranceCompany.Phone" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="InsuranceCompany.Email" class="control-label"></label>
                    <input asp-for="InsuranceCompany.Email" class="form-control" />
                    <span asp-validation-for="InsuranceCompany.Email" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="InsuranceCompany.Website" class="control-label"></label>
                    <input asp-for="InsuranceCompany.Website" class="form-control" />
                    <span asp-validation-for="InsuranceCompany.Website" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="InsuranceCompany.AddressLegal" class="control-label"></label>
                    <input asp-for="InsuranceCompany.AddressLegal" class="form-control" />
                    <span asp-validation-for="InsuranceCompany.AddressLegal" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="InsuranceCompany.AddressPostal" class="control-label"></label>
                    <input asp-for="InsuranceCompany.AddressPostal" class="form-control" />
                    <span asp-validation-for="InsuranceCompany.AddressPostal" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    <label asp-for="InsuranceCompany.Bank" class="control-label"></label>
                    <input asp-for="InsuranceCompany.Bank" class="form-control" />
                    <span asp-validation-for="InsuranceCompany.Bank" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    <label asp-for="InsuranceCompany.Comment" class="control-label"></label>
                    <input asp-for="InsuranceCompany.Comment" class="form-control" />
                    <span asp-validation-for="InsuranceCompany.Comment" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
