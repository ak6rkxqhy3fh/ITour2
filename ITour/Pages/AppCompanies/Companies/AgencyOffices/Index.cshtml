@page
@model ITour.Pages.AppCompanies.Companies.AgencyOffices.IndexModel

@{
    ViewData["Title"] = "Офисы агентства";
}

<h3>Офисы агентства</h3>

<p>
    <a asp-page="Create">Создать новое</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AgencyOffice[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgencyOffice[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgencyOffice[0].AddressPostal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgencyOffice[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgencyOffice[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgencyOffice[0].Comment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AgencyOffice) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressPostal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Изменить</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Детали</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
