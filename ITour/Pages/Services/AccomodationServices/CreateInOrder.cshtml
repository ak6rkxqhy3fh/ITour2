@page "{handler?}"
@model ITour.Pages.Services.AccomodationServices.CreateInOrderModel
@{
    ViewData["Title"] = "Создать Размещение";
}
<h3>Создать услугу Размещения к Заказу</h3>
<hr />
<div class="row">
    <div class="col-md-10">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-md-3">
                    <label asp-for="AccomodationService.CountryId" class="control-label"></label>
                    <select asp-for="AccomodationService.CountryId" CountryId class="form-control" asp-items="ViewBag.CountryId">
                        <option value="">--- Выберите ---</option>
                    </select>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="AccomodationService.ResortId" class="control-label"></label>
                    <select asp-for="AccomodationService.ResortId" ResortId class="form-control" asp-items="ViewBag.ResortId">
                        <option value="">--- Выберите ---</option>
                    </select>
                </div>
                <div class="form-group col-md-5">
                    <label asp-for="AccomodationService.HotelId" class="control-label"></label>
                    <select asp-for="AccomodationService.HotelId" HotelId class="form-control" asp-items="ViewBag.HotelId">
                        <option value="">--- Выберите ---</option>
                    </select>
                </div>
                <div class="form-group col-md-1">
                    <br><button type="button" class="btn btn-default" data-toggle="modal" data-target="#CreateHotelModal">
                        <span class="glyphicon glyphicon-plus"></span> Отель
                    </button>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="AccomodationService.FoodTypeId" class="control-label"></label>
                    <select asp-for="AccomodationService.FoodTypeId" class="form-control" asp-items="ViewBag.FoodTypeId">
                        <option value="">--- Выберите ---</option>
                    </select>
                </div>
                <div class="form-group col-md-8">
                    <label asp-for="AccomodationService.FoodTypeString" class="control-label"></label>
                    <input asp-for="AccomodationService.FoodTypeString" class="form-control" />
                    <span asp-validation-for="AccomodationService.FoodTypeString" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="AccomodationService.RoomTypeId" class="control-label"></label>
                    <select asp-for="AccomodationService.RoomTypeId" class="form-control" asp-items="ViewBag.RoomTypeId">
                        <option value="">--- Выберите ---</option>
                    </select>
                </div>
                <div class="form-group col-md-8">
                    <label asp-for="AccomodationService.RoomTypeString" class="control-label"></label>
                    <input asp-for="AccomodationService.RoomTypeString" class="form-control" />
                    <span asp-validation-for="AccomodationService.RoomTypeString" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="AccomodationService.DateBegin" class="control-label">Дата заезда</label>
                    <input asp-for="AccomodationService.DateBegin" class="form-control" />
                    <span asp-validation-for="AccomodationService.DateBegin" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="AccomodationService.DateEnd" class="control-label">Дата отъезда</label>
                    <input asp-for="AccomodationService.DateEnd" class="form-control" />
                    <span asp-validation-for="AccomodationService.DateEnd" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    <label asp-for="AccomodationService.Comment" class="control-label"></label>
                    <input asp-for="AccomodationService.Comment" class="form-control" />
                    <span asp-validation-for="AccomodationService.Comment" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-3">
                    <label asp-for="AccomodationService.Cost" class="control-label"></label>
                    <input asp-for="AccomodationService.Cost" class="form-control" value="0,00" />
                    <span asp-validation-for="AccomodationService.Cost" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="AccomodationService.CurrencyTypeId" class="control-label"></label>
                    <select asp-for="AccomodationService.CurrencyTypeId" class="form-control" asp-items="ViewBag.CurrencyTypeId">
                        <option value="">Выберите</option>
                    </select>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="AccomodationService.ExchangeRate" class="control-label"></label>
                    <input asp-for="AccomodationService.ExchangeRate" class="form-control" />
                    <span asp-validation-for="AccomodationService.ExchangeRate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div id="CreateHotelModal" class="modal fade" role="dialog">
    <div id="CreateHotelModalDialog" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Создать Отель</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label asp-for="Hotel.Name" class="control-label"></label>
                    <input asp-for="Hotel.Name" HotelName class="form-control" />
                    <span asp-validation-for="Hotel.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Hotel.NameEn" class="control-label"></label>
                    <input asp-for="Hotel.NameEn" HotelNameEN class="form-control" />
                    <span asp-validation-for="Hotel.NameEn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button id="CreateHotelBtn" class="btn btn-default">Создать</button> |
                    @{
                        string returnPage = (string)TempData.Peek("ReturnPage");
                        string orderId = ((Guid)TempData.Peek("OrderId")).ToString();
                    }
                    <a asp-page="@returnPage" asp-fragment="Services" asp-route-id="@orderId">Назад к заказу</a>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/cascading-resort-hotel.js"></script>
    <script src="~/js/create-hotel.js"></script>
}


