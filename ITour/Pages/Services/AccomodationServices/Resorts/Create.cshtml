@page
@model ITour.Pages.Services.AccomodationServices.Resorts.CreateModel

@{
    ViewData["Title"] = "Создать Курорт";
}

<h3>Создать Курорт</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Resort.CountryId" class="control-label"></label>
                <select asp-for="Resort.CountryId" class="form-control" asp-items="ViewBag.CountryId">
                    <option value="">- Выберите -</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Resort.Name" class="control-label"></label>
                <input asp-for="Resort.Name" class="form-control" />
                <span asp-validation-for="Resort.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
